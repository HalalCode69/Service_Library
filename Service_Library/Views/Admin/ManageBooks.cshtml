@model List<Service_Library.Models.Book>

@{
    ViewBag.Title = "Manage Books";
}

<h2>Manage Books</h2>
<a href="/Admin/AddBook" class="btn btn-primary">Add New Book</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Cover</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Available Copies</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <!-- Cover Image -->
                <td>
                    @if (book.CoverImage != null)
                    {
                        <img src="data:image/png;base64,@(Convert.ToBase64String(book.CoverImage))"
                             alt="Cover Image" class="img-thumbnail" style="width: 80px; height: auto;" />
                    }
                    else
                    {
                        <p>No Image</p>
                    }
                </td>
                <!-- Book Details -->
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Category</td>
                <td>@book.AvailableCopies</td>
                <!-- Action Buttons -->
                <td>
                    <a href="@Url.Action("EditBook", "Admin", new { id = book.BookId })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteBook", "Admin", new { id = book.BookId })" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this book?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
