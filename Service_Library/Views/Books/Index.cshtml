                    <!-- Display Price/Discount Information -->
                    @if (book.DiscountPrice > 0 && book.DiscountEndDate >= DateTime.Now)
                    {
                        <p class="book-price">
                            <span class="strike-price">$@book.PreviousBuyPrice.ToString("F2")</span>
