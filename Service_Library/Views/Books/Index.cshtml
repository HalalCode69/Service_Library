                @if (!string.IsNullOrEmpty(book.RemainingBorrowTime))
                {
                    <p style="font-weight: bold; color: #ffc107;">Borrowed</p>
                }
                else if (book.IsOwnedByCurrentUser)
                {
                    <p style="font-weight: bold; color: #d21e3c;">Bought</p>
                }
                else
