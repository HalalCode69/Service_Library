                @if (!string.IsNullOrEmpty(book.Title) && book.Title.Length <= 18)
                {
                    <h6 class="book-title">@book.Title</h6>
                }
                else
                {
                    <h6 class="book-title">@book.Title.Substring(0, 18)...</h6>
                }
                @if (!string.IsNullOrEmpty(book.Author) && book.Author.Length <= 18)
