@model IEnumerable<Service_Library.Models.ShoppingCartItem>

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>$@item.Price</td>
                <td>@item.Quantity</td>
                <td>$@(item.Price * item.Quantity)</td>
                <td>
                    <button class="btn btn-danger remove-from-cart-button" data-book-id="@item.BookId">Remove</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Any())
{
    <button class="btn btn-danger clear-cart-button">Clear Cart</button>
}

<button class="btn btn-success purchase-button">Purchase</button>

